{
  "name": "block_ml",
  "image": "node:20-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker": {},
    "ghcr.io/devcontainers-extra/features/supabase-cli": {},
    "ghcr.io/devcontainers-extra/features/tailscale": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dsznajder.es7-react-js-snippets",
        "xabikos.ReactSnippets",
        "Prisma.prisma",
        "EditorConfig.EditorConfig",
        "Supabase.vscode-supabase-extension",
        "Gruntfuggly.todo-tree",
        "Orta.vscode-jest"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/on-post-create.sh",
  "postAttachCommand": ".devcontainer/on-post-attach.sh",
  "containerEnv": {
    "PRISMA_DATABASE_URL": "postgresql://postgres:postgres@localhost:54322/postgres",
    "WATCHPACK_POLLING": "true",
    "TAILSCALE_DEVICE_NAME": "block-ml-dev"
  }
}
